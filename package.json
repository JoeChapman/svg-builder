{
  "name": "svg-builder",
  "version": "3.0.3",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "description": "Simple, chainable SVG-building tool for NodeJS and the browser",
  "keywords": [
    "svg",
    "svg-builder"
  ],
  "sideEffects": false,
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=16"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "generate:defs": "node scripts/extract-spec-data.js --ts --write && node scripts/extract-spec-data.js --write",
    "clean": "rimraf dist",
    "build:esm": "tsc -p tsconfig.build.esm.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "build:post": "node scripts/create-cjs-bridge.js",
    "build": "npm run generate:defs && npm run clean && npm run build:esm && npm run build:cjs && npm run build:post",
    "prepare": "npm run build",
    "test": "vitest run",
    "lint": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JoeChapman/svg-builder"
  },
  "author": "JoeChapman",
  "license": "MIT",
  "readmeFilename": "README.md",
  "devDependencies": {
    "@types/node": "^20.19.23",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@vitest/coverage-v8": "^4.0.4",
    "eslint": "^8.11.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  },
  "dependencies": {
    "svg-builder": "^3.0.2"
  }
}
